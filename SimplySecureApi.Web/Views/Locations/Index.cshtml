@model IEnumerable<SimplySecureApi.Data.Models.Domain.Entity.Location>

@{
    ViewData["Title"] = "Locations";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

@*<p>
    <a asp-action="Create" class="btn btn-outline-primary my-2 my-sm-0" >Create New Location</a>
</p>*@

<table class="table">
    <thead>
        <tr style="background-color: #343A40; color: #fff;">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Armed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSilentAlarm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var style = item.Triggered ? "background-color: rgba(242, 120, 75, 0.3);" : "";

            <tr class="border border-dark" style="@style;">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Armed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSilentAlarm)
                </td>

                <td>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Modify
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
